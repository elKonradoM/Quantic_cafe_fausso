from datetime import datetime
from extensions import db

class Customer(db.Model):
    __tablename__ = "customers"

    id = db.Column(db.Integer, primary_key=True)
    # Name will be provided for reservations and (now) newsletter signups.
    name = db.Column(db.String(160), nullable=True)

    # Email uniquely identifies a customer.
    email = db.Column(db.String(320), nullable=False, unique=True, index=True)

    phone = db.Column(db.String(50), nullable=True)
    newsletter_signup = db.Column(db.Boolean, nullable=False, default=False)
    created_at = db.Column(db.DateTime, nullable=False, default=datetime.utcnow)

    reservations = db.relationship(
        "Reservation",
        back_populates="customer",
        cascade="all, delete-orphan",
    )


class Reservation(db.Model):
    __tablename__ = "reservations"

    id = db.Column(db.Integer, primary_key=True)
    customer_id = db.Column(db.Integer, db.ForeignKey("customers.id"), nullable=False, index=True)

    # Stored as naive timestamp (HTML datetime-local has no timezone).
    time_slot = db.Column(db.DateTime, nullable=False, index=True)
    table_number = db.Column(db.Integer, nullable=False)
    guests = db.Column(db.Integer, nullable=False)
    created_at = db.Column(db.DateTime, nullable=False, default=datetime.utcnow)

    customer = db.relationship("Customer", back_populates="reservations")

    __table_args__ = (
        db.UniqueConstraint("time_slot", "table_number", name="uq_reservation_time_table"),
    )


class NewsletterSubscription(db.Model):
    __tablename__ = "newsletter_subscriptions"

    id = db.Column(db.Integer, primary_key=True)
    email = db.Column(db.String(320), nullable=False, unique=True, index=True)

    # NEW: last name (nullable for safe rollout; we'll make it required in API next step)
    last_name = db.Column(db.String(160), nullable=True)

    created_at = db.Column(db.DateTime, nullable=False, default=datetime.utcnow)
